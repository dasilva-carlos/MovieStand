<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_favorites_card_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/round_border"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_recommendation_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tool:src="@drawable/test_movie_banner"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/bg_transparent_to_black_vertical"
            android:layout_above="@+id/item_recommendation_title"/>

        <TextView
            android:id="@+id/item_recommendation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:paddingEnd="@dimen/margin_small"
            android:paddingStart="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            style="@style/SmallText"
            android:maxLines="2"
            android:ellipsize="end"
            tool:text="@string/ipsum_medium"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>